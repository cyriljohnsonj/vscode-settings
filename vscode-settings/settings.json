{
    /** Window */
    "window.commandCenter": false,
    "window.zoomLevel": -1,

    /** Workbench UI */
    "workbench.colorTheme": "Vitesse Dark Soft",
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.iconTheme": "vscode-icons",

    /** Workbench Scrolling */
    "workbench.list.smoothScrolling": true,
    "workbench.list.fastScrollSensitivity": 8,

    /** Workbench Editor */
    "workbench.editor.limit.enabled": false,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.preventPinnedEditorClose": "keyboard",
    "workbench.editor.closeOnFileDelete": true,

    /** Workbench */
    "workbench.statusBar.visible": true,
    "workbench.layoutControl.enabled": true,
    "workbench.tips.enabled": false,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#4E4B5C",
        "activityBar.activeBorder": "#dbd7caed"
    },
    "workbench.tree.enableStickyScroll": false,

    /** Editor Font */
    "editor.fontFamily": "Hasklug Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontWeight": 400,
    "editor.fontSize": 13,
    "editor.lineHeight": 21,
    "editor.rulers": [120],

    /** Editor Scroll */
    "editor.smoothScrolling": true,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.stickyScroll.enabled": false,

    /** Editor Brackets */
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.bracketPairs": "active",

    /** Editor Cursor */
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 10,
    "editor.hideCursorInOverviewRuler": false,

    /** Editor Scrollbar */
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,

    /** Editor Indentation */
    "editor.detectIndentation": false,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.guides.indentation": false,

    /** Editor Controls */
    "editor.showFoldingControls": "never",
    "editor.dragAndDrop": false,

    /** Editor Details */
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "editor.matchBrackets": "never",
    "editor.lineNumbers": "relative",

    /** Editor Formating */
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.linkedEditing": true,

    /** Editor Inline Hints */
    "editor.inlayHints.enabled": "on",
    "editor.inlayHints.fontFamily": "Hasklug Nerd Font",
    "editor.inlayHints.fontSize": 13,

    /** Editor */
    "editor.experimental.asyncTokenization": true,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.hover.delay": 200,
    "editor.accessibilitySupport": "off",
    // "editor.codeActionsOnSave": {
    //   "source.fixAll.eslint": "explicit"
    // },
    "editor.stickyTabStops": true,
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.tabSize": 4,
    "editor.renderWhitespace": "trailing",
    "editor.lightbulb.enabled": "off",

    /** Language General */
    "workbench.editor.languageDetection": false,
    "editor.autoSurround": "languageDefined",

    /** Scm */
    "scm.diffDecorations": "all",

    /** Explorer Controls */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,

    /** Explorer */
    "explorer.incrementalNaming": "smart",
    "symbols.hidesExplorerArrows": false,

    /** Emmet */
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html"
    },

    /** Search */
    "search.smartCase": true,
    "search.showLineNumbers": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/.nuxt": true,
        "**/.output": true,
        "**/logs": true,
        "**/**.code-search": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.github": true,
        "**/dist/**": true,
        "**/pnpm-lock.yaml": true,
        "**/npm-shrinkwrap.json": true,
        "**/package-lock.json": true,
        "**/yarn.lock": true
    },

    /** Git */
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    "git.confirmSync": false,

    /** Diff editor */
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "multiDiffEditor.experimental.enabled": true,

    /** Files */
    "files.enableTrash": true,
    "files.restoreUndoStack": true,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.parcel-cache": true
    },

    /** Terminal */
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.scrollback": 10000,

    /** Breadcrumbs */
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "breadcrumbs.symbolPath": "off",

    /** JSON */
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /** Python */
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
        "editor.formatOnType": true
    },

    /** Prettier */
    "prettier.tabWidth": 4,

    /** Python Linters */
    "black-formatter.args": ["--line-length=120"],
    "isort.args": ["--profile", "black"],

    /** Miscellaneous */
    "redhat.telemetry.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "git.openRepositoryInParentFolders": "never"
}
